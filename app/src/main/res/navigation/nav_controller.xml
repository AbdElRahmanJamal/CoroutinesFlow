<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_controller"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.coroutinesflow.features.heroes_home.view.HomeFragment"
        tools:layout="@layout/home_fragment" >
        <action
            android:id="@+id/action_homeFragment_to_heroDetailsFragment"
            app:destination="@id/heroDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/heroDetailsFragment"
        android:name="com.coroutinesflow.features.hero_details.HeroDetailsFragment"
        android:label="hero_details_fragment"
        tools:layout="@layout/hero_details_fragment" >
        <argument
            android:name="HeroItem"
            app:argType="com.coroutinesflow.features.heroes_home.data.model.Results" />
    </fragment>
</navigation>